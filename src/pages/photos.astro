---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import fs from 'fs';
import path from 'path';

// Server-side: Read the image files from the folder
const imageFolder = './static/photos'; // Ensure images are in the `public` folder so they can be served
const photos = fs.readdirSync(imageFolder).filter(file => file.endsWith('.jpg') || file.endsWith('.webp'));

---

<Layout title={`Gallery | ${SITE.title}`}>
  <Header activeNav="gallery" />
  <Main pageTitle="Gallery" pageDesc="Browse our photo gallery ...">
    <div class="gallery-photos page">
      {photos.map((photo, index) => {
        const photoName = photo.split('.')[0]; // 获取图片名称
        return (
          <div class="gallery-photo" data-index={index} key={index}>
            <img class="photo-img" loading='lazy' decoding="async" src={`/images1/${photo}`} alt={photoName} />
            <span class="photo-title">{photoName}</span>
            <span class="photo-time">2024-10-03</span> {/* 假设所有图片时间相同，你可以调整逻辑从文件或其他地方读取实际时间 */}
          </div>
        );
      })}
    </div>
  </Main>
  <Footer />
</Layout>

<style>
.gallery-photos {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.gallery-photo {
  width: calc(25% - 10px);
  position: relative;
  overflow: hidden;
  margin: 5px;
  flex-grow: 1;
  flex-basis: calc(25% - 10px);
}
.gallery-photo img {
  display: block;
  width: 100%;
  border-radius: 0;
  cursor: pointer;
  transition: all 0.4s ease-in-out;
}
.gallery-photo span.photo-title, .gallery-photo span.photo-time {
  background: rgba(0, 0, 0, 0.3);
  padding: 5px;
  font-size: 0.9rem;
  color: #fff;
  display: none;
}
.gallery-photo span.photo-title {
  position: absolute;
  bottom: 5px;
  left: 5px;
}
.gallery-photo span.photo-time {
  position: absolute;
  top: 5px;
  left: 5px;
  font-size: 0.8rem;
}
.gallery-photo:hover span.photo-title {
  display: block;
}
.gallery-photo:hover img {
  transform: scale(1.1);
}
@media screen and (max-width: 1280px) {
  .gallery-photo {
    width: calc(33.3% - 10px);
  }
}
@media screen and (max-width: 860px) {
  .gallery-photo {
    width: calc(50% - 10px);
  }
}
@media screen and (max-width: 683px) {
  .gallery-photo {
    width: calc(100% - 10px);
  }
  .photo-time {
    display: none;
  }
}

/* Lightbox styles */
.lightbox {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.lightbox img {
  max-width: 80%;
  max-height: 80%;
}
.lightbox.active {
  display: flex;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const galleryPhotos = document.querySelector('.gallery-photos');
  const lightbox = document.createElement('div');
  lightbox.classList.add('lightbox');
  document.body.appendChild(lightbox);

  galleryPhotos.addEventListener('click', (event) => {
    if (event.target.classList.contains('photo-img')) {
      const imgSrc = event.target.src;
      const lightboxImg = document.createElement('img');
      lightboxImg.src = imgSrc;
      lightbox.innerHTML = '';
      lightbox.appendChild(lightboxImg);
      lightbox.classList.add('active');
    }
  });

  lightbox.addEventListener('click', () => {
    lightbox.classList.remove('active');
  });
});
</script>
